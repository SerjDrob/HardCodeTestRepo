@model ProductDTO
<div class="col-3 pb-4 filter @Model.CategoryName">
    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
        <div class="card-body flex-fill px-3 pt-3 pb-1 row">
            <h5 class="card-title">@Model.Name</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.CategoryName</h6>
            <div class="col-5"><label class="float-right"><span class="text-info h5">@string.Format("{0:c0}", Model.Price)</div>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#watchProduct" data-bs-whatever="@Model.Id">Просмотр товара</button>
